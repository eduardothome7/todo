<p class="description">
  <%= task.project.client.name %> > <%= task.project.name %>
</p>

<p class="description">
  <%= task.category.name %>
</p>

<% if task.start_at.present? %>
  <p class="description">
    <strong>Início em: </strong>
    <%= task.start_at.strftime("%d/%m/%y as %H:%M") %>
  </p>
<% end %>
<% if task.conclusion_at.present? %>
  <p class="description">
    <strong>Conclusão prevista: </strong>
    <%= task.conclusion_at.strftime("%d/%m/%y as %H:%M") %>
  </p>
<% end %>
<% if task.finished? %>
  <p class="description">
   <strong>Entregue em: </strong>
    <%= task.finish_at.strftime("%d/%m/%y as %H:%M") %>
  </p>
<% end %>
<p class="description">
 <strong>Esforço Estimado</strong>
  <%= task.effort_min %> <small>min.</small>
</p>
<p class="description">
 <strong>Tempo trabalhado</strong>
  <%= task.total_minutes %> <small>min.</small>
</p>
<% if task.description.present? %>
  <p class="description">
    <%= task.description %>
  </p>
<% end %>
